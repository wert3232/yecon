<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/edit_namepin_ll"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <TextView
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="@string/bt_device_pin_title"
  	android:textSize="20dp"
  	android:layout_gravity="left"
  	android:layout_marginTop="5dp"
  	android:layout_marginLeft="10dp" />
  <EditText
  	android:id="@+id/bt_device_pin_et"
  	android:layout_width="400dp"
  	android:layout_height="50dp"
  	android:layout_margin="10dp"
  	android:imeOptions="flagNoExtractUi"
  	android:numeric = "integer"
  	android:maxLength = "16"
  	android:singleLine="true"
  	android:text="@string/bt_device_pin_text"
  	android:textSize="25dp"
  	android:layout_gravity="left"
  	/>
  <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginBottom="5dp"
     android:orientation="horizontal"
     android:gravity="center">
     <Button
  	    android:id="@+id/btn_edit_pin_ok"
  	    android:layout_width="100dp"
  	    android:layout_height="wrap_content"
  	    android:background="@drawable/btn_180_50_bg"
  	    android:textColor="@color/btn_textview"
  	    android:text="@string/str_edit_ok"
  	    android:textSize="20dp"
  	    />
  	<Button 
  	    android:id="@+id/btn_edit_pin_cancel"
  	    android:layout_width="100dp"
  	    android:layout_height="wrap_content"
  	    android:layout_marginLeft="50dp"
  	    android:background="@drawable/btn_180_50_bg"
  	    android:textColor="@color/btn_textview"
  	    android:text="@string/str_edit_cancel"
  	    android:textSize="20dp"
  	    />
  </LinearLayout>
</LinearLayout>
