<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:carsetting="http://schemas.android.com/apk/res/com.yecon.carsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_language_state"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/set_language" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_buzzer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_buzzer_state"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_buzzer" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_lighting_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_lighting_detect_state"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_lighting_detect" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_assistive_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_assistive_touch_state"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_assistive_touch" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_voice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_voice_state"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_voice_button" />
        
        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_voice_wakeup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_voice_state"
            carsetting:item_style="2"
            carsetting:item_subTitle="@string/set_wakeup_button" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_reset_state"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/set_reset" />

        <com.yecon.carsetting.view.HeaderLayout
            android:id="@+id/set_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carsetting:item_icon="@xml/icon_about_state"
            carsetting:item_style="3"
            carsetting:item_subTitle="@string/set_about" />
    </LinearLayout>

</ScrollView>